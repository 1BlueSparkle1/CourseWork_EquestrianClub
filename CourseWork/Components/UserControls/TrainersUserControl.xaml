<UserControl x:Class="CourseWork.Components.UserControls.TrainersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseWork.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="730">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Components/UserControls/frameUser.png"/>
        </Grid.Background>
        <StackPanel Margin="90,75,85,60">
            <StackPanel Orientation="Horizontal">
                <Image Width="220" Height="180"></Image>
                
                <StackPanel>
                    <TextBlock FontSize="15" x:Name="FullNameTb" TextWrapping="Wrap" Width="320"></TextBlock>
                    <TextBlock FontSize="15" x:Name="AgeTb"></TextBlock>
                    <TextBlock FontSize="15" x:Name="LevelTrainTb" TextWrapping="Wrap" Width="320"></TextBlock>
                </StackPanel>
            </StackPanel>

            <ScrollViewer Height="130">
                <TextBlock x:Name="Discription" TextWrapping="Wrap" Width="520">
                    
                </TextBlock>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
